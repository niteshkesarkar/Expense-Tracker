<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field
				name="title"
				type="text"
				label="Title"
				description="Enter title"
				required="true"
				/>
		<field
				name="description"
				type="textarea"
				label="Description"
				description="Enter description"
				required="true"
				/>
		<field
				name="members"
				type="billsusers"
				label="Members"
				description="Enter members"
				required="true"
				multiple="true"
				>
			<option value="-1" disabled="true" >-- Select users --</option>
		</field>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="created_by"
				type="hidden"
				/>
		<field
				name="created_date"
				type="hidden"
				/>
	</fieldset>
</form>
