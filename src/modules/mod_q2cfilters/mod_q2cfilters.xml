<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" client ="site" method="upgrade">
	<name>mod_q2cfilters_name</name>
	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-16 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>6th July 2017</creationDate>
	<version>2.9.6</version>
	<description>MOD_Q2CFILTERS_XML_DESCRIPTION</description>
	<languages folder="lang">
		<language tag="en-GB">en-GB/en-GB.mod_q2cfilters.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_q2cfilters.ini</language>
	</languages>
	<files>
		<filename module="mod_q2cfilters">mod_q2cfilters.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
	</files>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_Q2CFILTERS_SUFIX" description="MOD_Q2CFILTERS_SUFIX_DESC" />
				<field name="module_fix_size" class="btn-group" type="radio" default="0" description="MOD_Q2CFILTERS_SIZE_FIXED_DESC" label="MOD_Q2CFILTERS_SIZE_FIXED" >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="module_size" type="text" default="250" label="MOD_Q2CFILTERS_SIZE" description="MOD_Q2CFILTERS_SIZE_DESC" showon="module_fix_size:1"/>
				<field name="bs_version" class="btn-group" type="radio" default="bs3" description="MOD_Q2CFILTERS_BS_VERSION_DESC" label="MOD_Q2CFILTERS_BS_VERSION_LAYOUT" >
					<option value="bs3">MOD_Q2CFILTERS_BS3_LAYOUT</option>
					<option value="bs2">MOD_Q2CFILTERS_BS2_LAYOUT</option>
				</field>
				<field name="module_layout" class="btn-group" type="radio" default="vertical" description="MOD_Q2CFILTERS_DISPLAY_LAYOUT_DESC" label="MOD_Q2CFILTERS_DISPLAY_LAYOUT" >
					<option value="horizontal">MOD_Q2CFILTERS_HORZONTAL_LAYOUT</option>
					<option value="vertical">MOD_Q2CFILTERS_VERTICAL_LAYOUT</option>
				</field>
				<field name="apply_clear_buttons_position" class="btn-group" type="radio" default="below" description="MOD_Q2CFILTERS_SEARCH_SHOW_BUTTONS_DESC" label="MOD_Q2CFILTERS_SEARCH_SHOW_BUTTONS" >
					<option value="below">MOD_Q2CFILTERS_SEARCH_SHOW_BUTTON_BELOW</option>
					<option value="above">MOD_Q2CFILTERS_SEARCH_SHOW_BUTTON_ABOVE</option>
					<option value="both">MOD_Q2CFILTERS_SEARCH_SHOW_BUTTON_BOTH</option>
					<option value="none">MOD_Q2CFILTERS_SEARCH_SHOW_BUTTON_NONE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
