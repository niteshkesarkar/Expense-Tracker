<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" client ="site" method="upgrade">

	<name>Quick2Cart - Category List</name>

	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-13 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<creationDate>6th July 2017</creationDate>
	<version>2.9.6</version>

	<description>
		<![CDATA[Module to show the Category list from Quick2Cart Component]]>
	</description>

	<languages folder="lang">
		<language tag="en-GB">en-GB/en-GB.mod_qtc_categorylist.ini</language>
	</languages>

	<files>
		<filename module="mod_qtc_categorylist">mod_qtc_categorylist.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_SUFIX" description="MOD_QTC_CATEGORYLIST_MODULECLASS_SFX_DESC" />
				<field name="scroll_height" type="text"  default="250" label="COM_QUICK2CART_SCROLL_HEIGHT_LIMIT" description="COM_QUICK2CART_SCROLL_HEIGHT_LIMIT_DESC" />
			</fieldset>
		</fields>
	</config>

	<!--SETTING default param -->
	<config>
		<fields>
			<fieldset>

				<field name="moduleclass_sfx" default="" />
				<field name="scroll_height" default="250" />
			</fieldset>
		</fields>
	</config>

</extension>
