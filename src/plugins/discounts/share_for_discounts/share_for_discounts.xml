				<field name="button_css_class" type="text" default="" label="PLG_SHARE_FOR_DISCOUNTS_BUTTON_CLASS" description="PLG_SHARE_FOR_DISCOUNTS_BUTTON_CLASS_DESC" />
				<field name="facebook_app_id" type="text" default="" label="PLG_SHARE_FOR_DISCOUNTS_FACEBOOK_APP_ID" description="PLG_SHARE_FOR_DISCOUNTS_FACEBOOK_APP_ID_DESC" />
				<field name="load_fb_sdk_js" type="list" default="0" label="PLG_SHARE_FOR_DISCOUNTS_LOAD_FACEBOOK_SDK" description="PLG_SHARE_FOR_DISCOUNTS_LOAD_FACEBOOK_SDK_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
