<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_quick2cart</name>

	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-13 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<creationDate>6th July 2017</creationDate>
	<version>2.9.6</version>

	<description>PLG_SEARCH_QUICK2CART_XML_DESCRIPTION</description>

	<files>
		<filename plugin="quick2cart">quick2cart.php</filename>
		<filename>index.html</filename>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_search_quick2cart.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_quick2cart.sys.ini</language>
	</languages>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="20"
					description="PLG_SEARCH_QUICK2CART_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_QUICK2CART_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_products" type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					description="PLG_SEARCH_QUICK2CART_FIELD_PRODUCTS_DESC"
					label="PLG_SEARCH_QUICK2CART_FIELD_PRODUCTS_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
